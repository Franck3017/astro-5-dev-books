---
  const SPAIN = 'es'
  const country = Astro.request.headers.get('X-Vercel-IP-Country') ?? SPAIN

  const storeCountry = country === SPAIN ? 'spain' : 'usa'
  const countryName = country === SPAIN ? 'Espa√±a' : 'Estados Unidos'

  const { buy } = Astro.props
  const buyLink = buy[storeCountry]
---

<a href={buyLink} class="flex gap-1 justify-between w-full py-4 px-6 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-xl text-center transition-all shadow-lg hover:shadow-xl">
  Comprar en Amazon {countryName}

  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
  </svg>
</a>